
<div class="container">
	<h3>Identifiez-vous</h3>
<%= form_tag sessions_path, :class => "well form-horizontal" do %>
<div class="control-group">
  <%= label_tag :email, 'Votre e-mail', :class => 'control-label' %>
  	<div class="controls">
  		<%= text_field_tag :email, params[:email], :class => 'text_field', :placeholder => "prenom.nom@entreprise.com" %>
	</div>
</div>
<div class="control-group">
  <%= label_tag :password, 'Votre mot de passe', :class => 'control-label' %>
	 <div class="controls">
    	<%= password_field_tag :password, nil, :class => 'text_field', :placeholder => "Mot de passe" %>
	</div>
</div>
 <div class="controls">
	<%= submit_tag "Connexion", :class => "btn" %>
</div>
<% end %>
</div>
